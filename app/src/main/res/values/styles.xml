<resources>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_home_indicator</item>
        <item name="android:textColor">#939393</item>
    </style>

    <!-- Collapsing toolbar application theme. -->
    <style name="BaseAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Launch screen theme. -->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/layout_launch_screen</item>
    </style>

    <!-- Grid list item -->
    <style name="grid_list_item_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="grid_list_item_marker">
        <item name="android:layout_width">@dimen/discount_marker_width</item>
        <item name="android:layout_height">@dimen/discount_marker_height</item>
        <item name="android:layout_marginEnd">@dimen/big_value</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="grid_list_item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/mid_value</item>
        <item name="android:layout_marginStart">@dimen/mid_value</item>
        <item name="android:layout_marginTop">@dimen/big_value</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <style name="grid_list_item_content_desc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:padding">@dimen/mid_value</item>
    </style>

    <style name="grid_list_item_button">
        <item name="android:layout_width">@dimen/grid_list_item_width</item>
        <item name="android:layout_height">@dimen/grid_list_item_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/mid_value</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>