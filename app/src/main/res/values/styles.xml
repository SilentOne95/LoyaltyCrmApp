<resources>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <!-- Collapsing toolbar application theme. -->
    <style name="BaseAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Launch screen theme. -->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/layout_launch_screen</item>
    </style>

    <!-- Basic styles -->
    <style name="layout_wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="basic_grid_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:verticalSpacing">@dimen/mid_value</item>
        <item name="android:horizontalSpacing">@dimen/big_value</item>
        <item name="android:gravity">center</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="basic_min_size_button">
        <item name="android:minWidth">@dimen/zero</item>
        <item name="android:minHeight">@dimen/zero</item>
    </style>

    <style name="basic_bottom_sheet_text" parent="layout_wrap_content">
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <!-- Login fragments -->
    <style name="login_text_input_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorAccent</item>
    </style>

    <style name="login_edittext_error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorErrorInput</item>
        <item name="android:textSize">@dimen/very_small_text_size</item>
    </style>

    <!-- Login fragment - main -->
    <style name="login_image_logo_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/login_image_logo_height</item>
        <item name="android:layout_marginTop">@dimen/very_big_value</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">@dimen/small_value</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="login_buttons_container_style" parent="layout_wrap_content">
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/small_value</item>
    </style>

    <style name="choose_register_method_text_style" parent="layout_wrap_content">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/mid_value</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <style name="basic_login_button_style">
        <item name="android:layout_width">@dimen/login_button_width</item>
        <item name="android:layout_height">@dimen/login_button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingStart">@dimen/mid_value</item>
        <item name="android:paddingEnd">@dimen/small_value</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <style name="login_google_button_style" parent="basic_login_button_style">
    </style>

    <style name="login_facebook_button_style" parent="basic_login_button_style">
        <item name="android:layout_marginTop">@dimen/big_value</item>
        <item name="android:drawablePadding">@dimen/small_value</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="login_phone_button_style" parent="basic_login_button_style">
        <item name="android:layout_marginTop">@dimen/big_value</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="register_as_guest_text_style" parent="layout_wrap_content">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
        <item name="android:layout_marginBottom">@dimen/small_value</item>
        <item name="android:padding">@dimen/mid_value</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <!-- Login fragment - provide phone number -->
    <style name="verify_number_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/mid_value</item>
        <item name="android:layout_marginTop">@dimen/big_value</item>
        <item name="android:layout_marginEnd">@dimen/mid_value</item>
        <item name="android:layout_marginBottom">@dimen/mid_value</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="verify_number_instruction_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/mid_value</item>
        <item name="android:layout_marginTop">@dimen/small_value</item>
        <item name="android:layout_marginEnd">@dimen/mid_value</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <style name="register_prefix_input_box_style" parent="login_text_input_layout_style">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_marginStart">@dimen/big_value</item>
        <item name="android:layout_marginEnd">@dimen/mid_value</item>
        <item name="android:minWidth">@dimen/register_input_box_min_width</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>

    <style name="register_prefix_input_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/very_small_value</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">phone</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>

    <style name="register_number_input_box_style" parent="login_text_input_layout_style">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_marginEnd">@dimen/big_value</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>

    <style name="register_number_input_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">phone</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>

    <style name="register_phone_icon_image">
        <item name="android:layout_width">@dimen/register_icon_image_size</item>
        <item name="android:layout_height">@dimen/register_icon_image_size</item>
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/register_number_icon_image_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
    </style>

    <style name="register_number_button_style">
        <item name="android:layout_width">@dimen/register_number_button_width</item>
        <item name="android:layout_height">@dimen/register_number_button_height</item>
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/very_big_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <style name="terms_privacy_policy_link_text_style" parent="layout_wrap_content">
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/register_phone_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
        <item name="android:padding">@dimen/small_value</item>
        <item name="android:textColor">@color/colorLink</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="more_info_link_text_style" parent="layout_wrap_content">
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
        <item name="android:padding">@dimen/small_value</item>
        <item name="android:textColor">@color/colorLink</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

