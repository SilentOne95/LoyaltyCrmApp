        <item name="android:layout_height">@dimen/register_icon_image_size</item>
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/verify_phone_icon_image_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
    </style>

    <style name="verify_waiting_for_code_text_style" parent="layout_wrap_content">
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/very_big_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="verify_progress_bar_style" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/mid_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
        <item name="android:layout_marginBottom">@dimen/small_value</item>

    </style>

    <!-- Map bottom sheet first Tab: Opening Hours -->
    <style name="vertical_divider_line">
        <item name="android:layout_width">@dimen/vertical_divider_width</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:layout_marginTop">@dimen/very_big_value</item>
        <item name="android:layout_marginBottom">@dimen/very_big_value</item>
        <item name="android:background">@color/colorBlack</item>
    </style>

    <style name="bottom_sheet_first_day_text_style" parent="basic_bottom_sheet_text">
        <item name="android:layout_marginTop">@dimen/mid_value</item>
    </style>

    <style name="bottom_sheet_last_day_text_style" parent="basic_bottom_sheet_text">
        <item name="android:layout_marginBottom">@dimen/mid_value</item>
    </style>

    <!-- General grid list item -->
    <style name="grid_item_image">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Grid list item Coupon // one row -->
    <style name="grid_item_coupon_marker_tag_one_row">
        <item name="android:layout_width">@dimen/discount_marker_width_one_row</item>
        <item name="android:layout_height">@dimen/discount_marker_height_one_row</item>
        <item name="android:layout_marginEnd">@dimen/big_value</item>
