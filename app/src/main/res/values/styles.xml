    </style>

    <style name="verify_code_input_box_style" parent="login_text_input_layout_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/register_phone_margin_top</item>
