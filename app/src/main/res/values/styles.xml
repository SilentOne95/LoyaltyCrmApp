<resources>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <!-- Collapsing toolbar application theme. -->
    <style name="BaseAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Launch screen theme. -->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/layout_launch_screen</item>
    </style>

    <!-- Basic styles -->
    <style name="layout_wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="basic_grid_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:verticalSpacing">@dimen/mid_value</item>
        <item name="android:horizontalSpacing">@dimen/big_value</item>
        <item name="android:gravity">center</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="basic_min_size_button">
        <item name="android:minWidth">@dimen/zero</item>
        <item name="android:minHeight">@dimen/zero</item>
    </style>

    <style name="basic_bottom_sheet_text" parent="layout_wrap_content">
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <!-- Login fragments -->
    <style name="login_text_input_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorAccent</item>
    </style>

    <style name="login_edittext_error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorErrorInput</item>
        <item name="android:textSize">@dimen/very_small_text_size</item>
    </style>

    <!-- General grid list item -->
    <style name="grid_item_image">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Grid list item Coupon // one row -->
    <style name="grid_item_coupon_marker_tag_one_row">
        <item name="android:layout_width">@dimen/discount_marker_width_one_row</item>
        <item name="android:layout_height">@dimen/discount_marker_height_one_row</item>
        <item name="android:layout_marginEnd">@dimen/big_value</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="grid_item_coupon_code_one_row" parent="layout_wrap_content">
        <item name="android:background">@drawable/rounded_corners_orange</item>
        <item name="android:layout_margin">@dimen/small_value</item>
        <item name="android:padding">@dimen/small_value</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/layout_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="grid_item_coupon_title_one_row" parent="layout_wrap_content">
        <item name="android:textSize">@dimen/very_big_text_size</item>
    </style>

    <style name="grid_item_coupon_price_text_one_row" parent="layout_wrap_content">
        <item name="android:layout_marginTop">@dimen/small_value</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <style name="grid_item_coupon_price_amount_one_row" parent="layout_wrap_content">
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="grid_item_coupon_old_price_amount_one_row" parent="layout_wrap_content">
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="grid_item_coupon_desc_text_one_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">4</item>
        <item name="android:layout_marginTop">@dimen/small_value</item>
    </style>

    <style name="grid_item_coupon_show_code_button_one_row" parent="basic_min_size_button">
        <item name="android:layout_width">@dimen/grid_item_button_code_width_one_row</item>
        <item name="android:layout_height">@dimen/grid_item_height_one_row</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/mid_value</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <style name="grid_item_coupon_show_details_button_one_row" parent="basic_min_size_button">
        <item name="android:layout_width">@dimen/grid_item_button_details_width_one_row</item>
        <item name="android:layout_height">@dimen/grid_item_height_one_row</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/mid_value</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <!-- Grid list item Product // one row -->
    <style name="grid_item_product_title_one_row" parent="layout_wrap_content">
        <item name="android:textSize">@dimen/very_big_text_size</item>
    </style>

    <style name="grid_item_product_price_text_one_row" parent="layout_wrap_content">
        <item name="android:layout_marginTop">@dimen/small_value</item>
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="grid_item_product_price_amount_one_row" parent="layout_wrap_content">
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="grid_item_product_desc_text_one_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">4</item>
        <item name="android:layout_marginTop">@dimen/small_value</item>
    </style>

    <style name="grid_item_product_button_one_row" parent="basic_min_size_button">
        <item name="android:layout_width">@dimen/grid_item_button_details_width_one_row</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_height">@dimen/grid_item_height_one_row</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/big_value</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <!-- Grid list item Home // one row -->
    <style name="grid_item_home_title_one_row" parent="layout_wrap_content">
        <item name="android:textSize">@dimen/mid_text_size</item>
        <item name="android:layout_margin">@dimen/mid_value</item>
    </style>

    <style name="grid_item_home_content_desc_one_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:padding">@dimen/mid_value</item>
    </style>

    <style name="grid_item_home_button_one_row" parent="basic_min_size_button">
        <item name="android:layout_width">@dimen/grid_item_button_details_width_one_row</item>
        <item name="android:layout_height">@dimen/grid_item_height_two_rows</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/mid_value</item>
        <item name="android:layout_marginTop">@dimen/big_value</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <!-- Grid list item Home // two rows -->
    <style name="grid_item_home_image_two_rows" parent="grid_item_image">
        <item name="android:layout_marginTop">@dimen/mid_value</item>
    </style>

    <style name="grid_item_home_title_two_rows" parent="layout_wrap_content">
        <item name="android:layout_marginTop">@dimen/mid_value</item>
        <item name="android:layout_marginBottom">@dimen/mid_value</item>
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <!-- Grid list item Coupon // two rows -->
    <style name="grid_item_coupon_marker_tag_two_rows">
        <item name="android:layout_width">@dimen/discount_marker_width_two_rows</item>
        <item name="android:layout_height">@dimen/discount_marker_height_two_rows</item>
        <item name="android:layout_marginEnd">@dimen/mid_value</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="grid_item_coupon_title_two_rows" parent="layout_wrap_content">
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="grid_item_coupon_code_two_rows" parent="layout_wrap_content">
        <item name="android:layout_margin">@dimen/small_value</item>
        <item name="android:padding">@dimen/small_value</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="grid_item_coupon_price_text_two_rows" parent="layout_wrap_content">
        <item name="android:layout_marginTop">@dimen/small_value</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="grid_item_coupon_price_amount_two_rows" parent="layout_wrap_content">
        <item name="android:layout_marginStart">@dimen/very_small_value</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="grid_item_coupon_old_price_amount_two_rows" parent="layout_wrap_content">
        <item name="android:layout_marginStart">@dimen/very_small_value</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="grid_item_coupon_desc_text_two_rows">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">3</item>
        <item name="android:layout_marginTop">@dimen/small_value</item>
    </style>

    <style name="grid_item_coupon_show_code_button_two_rows" parent="basic_min_size_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/grid_item_height_one_row</item>
        <item name="android:layout_marginTop">@dimen/mid_value</item>
        <item name="android:layout_marginBottom">@dimen/small_value</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <style name="grid_item_coupon_show_details_button_two_rows" parent="basic_min_size_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/grid_item_height_one_row</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <!-- Grid list item Product // two rows -->
    <style name="grid_item_product_title_two_rows" parent="layout_wrap_content">
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="grid_item_product_price_text_two_rows" parent="layout_wrap_content">
        <item name="android:layout_marginTop">@dimen/small_value</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="grid_item_product_price_amount_two_rows" parent="layout_wrap_content">
        <item name="android:layout_marginStart">@dimen/very_small_value</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="grid_item_product_desc_text_two_rows">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">3</item>
        <item name="android:layout_marginTop">@dimen/small_value</item>
    </style>

    <style name="grid_item_product_button_two_rows" parent="basic_min_size_button">
        <item name="android:layout_width">@dimen/grid_item_button_details_width_two_rows</item>
        <item name="android:layout_height">@dimen/grid_item_height_two_rows</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/mid_value</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <!-- Barcode scanner layout -->
    <style name="switch_button_barcode_scanner" parent="Theme.AppCompat.Light">
        <item name="android:scaleX">1.1</item>
        <item name="android:scaleY">1.1</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <!-- Settings alert dialog -->
    <style name="settings_alert_dialog_style">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>