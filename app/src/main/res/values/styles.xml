<resources>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <!-- Collapsing toolbar application theme. -->
    <style name="BaseAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Launch screen theme. -->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/layout_launch_screen</item>
    </style>

    <!-- Basic styles -->
    <style name="basic_grid_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:verticalSpacing">@dimen/mid_value</item>
        <item name="android:horizontalSpacing">@dimen/big_value</item>
        <item name="android:gravity">center</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="basic_recycler_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbars">none</item>
        <item name="android:padding">@dimen/small_value</item>
    </style>

    <style name="basic_log_in_edit_text_description" parent="layout_wrap_content">
        <item name="android:layout_marginTop">@dimen/mid_value</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="basic_min_size_button">
        <item name="android:minWidth">@dimen/zero</item>
        <item name="android:minHeight">@dimen/zero</item>
    </style>

    <style name="basic_bottom_sheet_text" parent="layout_wrap_content">
        <item name="android:textSize">@dimen/mid_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!-- Navigation view -->
    <style name="nav_header_logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">24dp</item>
    </style>

    <style name="navigation_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <!-- Home fragment -->
    <style name="home_special_offer_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_marginBottom">@dimen/mid_value</item>
    </style>

    <style name="home_info_text_view" parent="layout_wrap_content">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/mid_value</item>
        <item name="android:layout_marginBottom">@dimen/big_value</item>
    </style>

    <style name="home_grid_view" parent="basic_grid_view_style">
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">@dimen/mid_value</item>
    </style>

    <!-- Coupons fragment  -->
    <style name="coupons_empty_state_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/colorFragmentBackground</item>
        <item name="android:layout_margin">@dimen/big_value</item>
    </style>

    <style name="coupons_empty_state_text_one">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="coupons_empty_state_text_two">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/mid_value</item>
    </style>

    <!-- Coupon and Product details activity -->
    <style name="details_image_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="details_valid_text" parent="layout_wrap_content">
        <item name="android:layout_marginTop">@dimen/small_value</item>
    </style>

    <style name="details_valid_date_text_view">
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <style name="details_product_title" parent="layout_wrap_content">
        <item name="android:layout_marginTop">@dimen/small_value</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/very_big_text_size</item>
    </style>

    <style name="basic_grid_list_item_marker">
        <item name="android:layout_width">@dimen/discount_marker_width_one_row</item>
        <item name="android:layout_height">@dimen/discount_marker_height_one_row</item>
        <item name="android:layout_marginEnd">@dimen/big_value</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="details_price_text" parent="layout_wrap_content">
        <item name="android:layout_marginTop">@dimen/small_value</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <style name="details_price_amount" parent="layout_wrap_content">
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="details_old_price_amount" parent="layout_wrap_content">
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="details_show_coupon_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/coupon_details_button_height</item>
        <item name="android:layout_marginTop">@dimen/mid_value</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="details_product_description_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
        <item name="android:layout_marginTop">@dimen/big_value</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    
    <!-- Coupon bottom sheet -->
    <style name="bottom_coupon_advice_text">
        <item name="android:layout_margin">@dimen/small_value</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>
    
    <style name="bottom_coupon_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/small_value</item>
        <item name="android:layout_marginBottom">@dimen/mid_value</item>
    </style>

    <style name="bottom_coupon_switch_arrow">
        <item name="android:padding">@dimen/mid_value</item>
    </style>

    <style name="bottom_coupon_view_flipper">
        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">@dimen/coupon_view_flipper_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/small_value</item>
    </style>

    <style name="bottom_coupon_text_code">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <!-- Log In and -->
    <style name="login_text_input_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorAccent</item>
    </style>

    <style name="login_edittext_error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorErrorInput</item>
        <item name="android:textSize">@dimen/very_small_text_size</item>
    </style>

    <!-- Sign Up screen -->
    <style name="log_in_company_image" parent="layout_wrap_content">
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/big_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
        <item name="android:layout_marginBottom">@dimen/mid_value</item>
        <item name="android:padding">@dimen/mid_value</item>
    </style>

    <style name="log_in_text_header" parent="layout_wrap_content">
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/mid_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
        <item name="android:layout_marginBottom">@dimen/small_value</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/very_big_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="login_field_edit_text">
        <item name="android:inputType">textPersonName</item>
        <item name="android:ems">10</item>
        <item name="android:paddingStart">@dimen/sign_up_fields_padding</item>
        <item name="android:paddingEnd">@dimen/sign_up_fields_padding</item>
        <item name="android:layout_width">@dimen/sign_up_fields_width</item>
        <item name="android:layout_height">@dimen/sign_up_fields_height</item>
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/small_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
    </style>

    <style name="password_field_edit_text">
        <item name="android:inputType">textPassword</item>
        <item name="android:ems">10</item>
        <item name="android:paddingStart">@dimen/sign_up_fields_padding</item>
        <item name="android:paddingEnd">@dimen/sign_up_fields_padding</item>
        <item name="android:layout_width">@dimen/sign_up_fields_width</item>
        <item name="android:layout_height">@dimen/sign_up_fields_height</item>
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/small_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
    </style>

    <style name="email_field_edit_text">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:ems">10</item>
        <item name="android:paddingStart">@dimen/sign_up_fields_padding</item>
        <item name="android:paddingEnd">@dimen/sign_up_fields_padding</item>
        <item name="android:layout_width">@dimen/sign_up_fields_width</item>
        <item name="android:layout_height">@dimen/sign_up_fields_height</item>
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/small_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
    </style>

    <style name="phone_field_edit_text">
        <item name="android:inputType">phone</item>
        <item name="android:ems">10</item>
        <item name="android:paddingStart">@dimen/sign_up_fields_padding</item>
        <item name="android:paddingEnd">@dimen/sign_up_fields_padding</item>
        <item name="android:layout_width">@dimen/sign_up_fields_width</item>
        <item name="android:layout_height">@dimen/sign_up_fields_height</item>
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/small_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
    </style>

    <style name="sign_up_checkbox_newsletter">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/mid_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="sign_up_button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">@dimen/big_value</item>
        <item name="android:layout_width">@dimen/sign_up_fields_width</item>
        <item name="android:layout_height">@dimen/sign_up_fields_height</item>
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
    </style>

    <style name="log_in_text_view_action" parent="layout_wrap_content">
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/big_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
        <item name="android:layout_marginBottom">@dimen/mid_value</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <!-- Map bottom sheet activity -->
    <style name="bottom_sheet_general_icon_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:layout_marginStart">@dimen/mid_value</item>
        <item name="android:layout_marginTop">@dimen/small_value</item>
        <item name="android:layout_marginEnd">@dimen/mid_value</item>
        <item name="android:drawablePadding">@dimen/mid_value</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="bottom_sheet_general_place_address">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_sheet_general_text_icon_height</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginStart">@dimen/mid_value</item>
        <item name="android:layout_marginBottom">@dimen/very_small_value</item>
        <item name="android:layout_marginEnd">@dimen/mid_value</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="bottom_sheet_general_opening_hours">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginStart">@dimen/mid_value</item>
        <item name="android:layout_marginEnd">@dimen/mid_value</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="bottom_sheet_horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_sheet_horizontal_divider_height</item>
        <item name="android:layout_marginTop">@dimen/small_value</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_gravity">bottom</item>
    </style>
    
    <!-- Map bottom sheet first Tab: Opening Hours -->
    <style name="vertical_divider_line">
        <item name="android:layout_width">@dimen/vertical_divider_width</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:layout_marginTop">@dimen/very_big_value</item>
        <item name="android:layout_marginBottom">@dimen/very_big_value</item>
        <item name="android:background">@color/colorBlack</item>
    </style>

    <style name="bottom_sheet_first_day_text_style" parent="basic_bottom_sheet_text">
        <item name="android:layout_marginTop">@dimen/mid_value</item>
    </style>

    <style name="bottom_sheet_last_day_text_style" parent="basic_bottom_sheet_text">
        <item name="android:layout_marginBottom">@dimen/mid_value</item>
    </style>

    <!-- Map bottom sheet first Tab: Contact Info -->
    <style name="bottom_sheet_contact_us_text" parent="basic_bottom_sheet_text">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/mid_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="contact_info_phone_view" parent="basic_bottom_sheet_text">
        <item name="android:layout_marginStart">@dimen/very_big_value</item>
        <item name="android:layout_marginTop">@dimen/small_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
        <item name="android:padding">@dimen/small_value</item>
        <item name="android:drawablePadding">@dimen/mid_value</item>
    </style>

    <style name="contact_info_email_view" parent="basic_bottom_sheet_text">
        <item name="android:layout_marginStart">@dimen/very_big_value</item>
        <item name="android:layout_marginTop">@dimen/small_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
        <item name="android:padding">@dimen/small_value</item>
        <item name="android:drawablePadding">@dimen/mid_value</item>
    </style>

    <style name="contact_info_website_view" parent="basic_bottom_sheet_text">
        <item name="android:layout_marginStart">@dimen/very_big_value</item>
        <item name="android:layout_marginTop">@dimen/small_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
        <item name="android:padding">@dimen/small_value</item>
        <item name="android:drawablePadding">@dimen/mid_value</item>
    </style>


    <!-- General grid list item -->
    <style name="grid_item_image">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Grid list item Coupon // one row -->
    <style name="grid_item_coupon_marker_tag_one_row">
        <item name="android:layout_width">@dimen/discount_marker_width_one_row</item>
        <item name="android:layout_height">@dimen/discount_marker_height_one_row</item>
        <item name="android:layout_marginEnd">@dimen/big_value</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="grid_item_coupon_code_one_row" parent="layout_wrap_content">
        <item name="android:background">@drawable/rounded_corners_orange</item>
        <item name="android:layout_margin">@dimen/small_value</item>
        <item name="android:padding">@dimen/small_value</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/layout_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="grid_item_coupon_title_one_row" parent="layout_wrap_content">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/very_big_text_size</item>
    </style>

    <style name="grid_item_coupon_price_text_one_row" parent="layout_wrap_content">
        <item name="android:layout_marginTop">@dimen/small_value</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <style name="grid_item_coupon_price_amount_one_row" parent="layout_wrap_content">
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="grid_item_coupon_old_price_amount_one_row" parent="layout_wrap_content">
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="grid_item_coupon_desc_text_one_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">4</item>
        <item name="android:layout_marginTop">@dimen/small_value</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="grid_item_coupon_show_code_button_one_row" parent="basic_min_size_button">
        <item name="android:layout_width">@dimen/grid_item_button_code_width_one_row</item>
        <item name="android:layout_height">@dimen/grid_item_height_one_row</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/mid_value</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <style name="grid_item_coupon_show_details_button_one_row" parent="basic_min_size_button">
