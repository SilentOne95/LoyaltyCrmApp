<resources>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_home_indicator</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <!-- Collapsing toolbar application theme. -->
    <style name="BaseAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Launch screen theme. -->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/layout_launch_screen</item>
    </style>

    <!-- Basic styles -->
    <style name="basic_image_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="basic_grid_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:verticalSpacing">@dimen/mid_value</item>
        <item name="android:horizontalSpacing">@dimen/big_value</item>
        <item name="android:gravity">center</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="basic_grid_list_item_marker">
        <item name="android:layout_width">@dimen/discount_marker_width</item>
        <item name="android:layout_height">@dimen/discount_marker_height</item>
        <item name="android:layout_marginEnd">@dimen/big_value</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="basic_log_in_edit_text_description" parent="layout_wrap_content">
        <item name="android:layout_marginTop">@dimen/mid_value</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="basic_log_in_field">
        <item name="android:layout_width">@dimen/log_in_fields_width</item>
        <item name="android:layout_height">@dimen/log_in_fields_height</item>
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/small_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
    </style>

    <style name="basic_log_in_edit_text" parent="basic_log_in_field">
        <item name="android:ems">10</item>
        <item name="android:paddingStart">@dimen/log_in_fields_padding</item>
        <item name="android:paddingEnd">@dimen/log_in_fields_padding</item>
    </style>

    <!-- Home fragment -->
    <style name="home_special_offer_image" parent="basic_image_style">
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_marginBottom">@dimen/mid_value</item>
    </style>

    <style name="home_info_text_view" parent="layout_wrap_content">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/mid_value</item>
        <item name="android:layout_marginBottom">@dimen/big_value</item>
    </style>

    <style name="home_grid_view" parent="basic_grid_view_style">
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">@dimen/mid_value</item>
    </style>

    <!-- Coupons fragment  -->
    <style name="coupons_empty_state_text_one">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
        <item name="android:textColor">@color/colorEmptyStateText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="coupons_empty_state_text_two">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/mid_value</item>
    </style>

    <!-- Coupon details activity -->
    <style name="details_valid_text" parent="layout_wrap_content">
        <item name="android:layout_marginTop">@dimen/small_value</item>
    </style>

    <style name="details_valid_date_text_view">
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <style name="details_product_title" parent="layout_wrap_content">
        <item name="android:layout_marginTop">@dimen/small_value</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/very_big_text_size</item>
    </style>

    <style name="details_price_text" parent="layout_wrap_content">
        <item name="android:layout_marginTop">@dimen/mid_value</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="details_price_amount" parent="layout_wrap_content">
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="details_old_price_amount" parent="layout_wrap_content">
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="details_show_coupon_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/coupon_details_button_height</item>
        <item name="android:layout_marginTop">@dimen/mid_value</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="details_product_description_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/big_value</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <!-- Log In and Sign Up activity -->
    <style name="log_in_company_image" parent="layout_wrap_content">
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/big_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
        <item name="android:layout_marginBottom">@dimen/mid_value</item>
        <item name="android:padding">@dimen/mid_value</item>
    </style>

    <style name="log_in_text_header" parent="layout_wrap_content">
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/mid_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
        <item name="android:layout_marginBottom">@dimen/small_value</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/very_big_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="log_in_facebook_button" parent="basic_log_in_field">
        <item name="android:textSize">@dimen/mid_text_size</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/big_value</item>
    </style>

    <style name="login_field_edit_text" parent="basic_log_in_edit_text">
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="password_field_edit_text" parent="basic_log_in_edit_text">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="email_field_edit_text" parent="basic_log_in_edit_text">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="phone_field_edit_text" parent="basic_log_in_edit_text">
        <item name="android:inputType">phone</item>
    </style>

    <style name="log_in_button" parent="basic_log_in_field">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">@dimen/log_in_button_margin_bottom</item>
    </style>

    <style name="log_in_remind_password_text_view" parent="layout_wrap_content">
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/big_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <style name="sign_up_text_view" parent="layout_wrap_content">
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/mid_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
        <item name="android:layout_marginBottom">@dimen/big_value</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <style name="sign_up_checkbox_newsletter">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/mid_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="sign_up_button" parent="basic_log_in_field">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">@dimen/big_value</item>
    </style>

    <style name="log_in_text_view_action" parent="layout_wrap_content">
        <item name="android:layout_marginStart">@dimen/small_value</item>
        <item name="android:layout_marginTop">@dimen/big_value</item>
        <item name="android:layout_marginEnd">@dimen/small_value</item>
        <item name="android:layout_marginBottom">@dimen/mid_value</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <!-- Navigation View -->
    <style name="navigation_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <!-- Bottom Sheet activity -->


    <!-- Grid list item -->
    <style name="grid_list_item_title" parent="layout_wrap_content">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/mid_value</item>
        <item name="android:layout_marginStart">@dimen/mid_value</item>
        <item name="android:layout_marginTop">@dimen/big_value</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <style name="grid_list_item_content_desc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:padding">@dimen/mid_value</item>
    </style>

    <style name="grid_list_item_button">
        <item name="android:layout_width">@dimen/grid_list_item_width</item>
        <item name="android:layout_height">@dimen/grid_list_item_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/mid_value</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- wrap_content layout size -->
    <style name="layout_wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>