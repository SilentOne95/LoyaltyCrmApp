<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grid_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_corners_grid_item">

    <ImageView
        android:id="@+id/grid_item_image"
        android:src="@drawable/image_coupon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/grid_list_item_content_desc"
        style="@style/grid_list_item_image"/>

    <TextView
        android:id="@+id/discount_marker_text_view"
        android:background="@drawable/rounded_corners_label_discount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/grid_list_item_marker"/>

    <TextView
        android:id="@+id/grid_item_title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grid_item_image"
        style="@style/grid_list_item_title"/>

    <TextView
        android:id="@+id/grid_item_content_description"
        android:text="@string/short_lorem_ipsum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grid_item_title_text"
        style="@style/grid_list_item_content_desc"/>

    <Button
        android:id="@+id/view_details_button"
        android:text="@string/check_button"
        android:background="@drawable/rounded_corners_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grid_item_content_description"
        style="@style/grid_list_item_button"/>

</android.support.constraint.ConstraintLayout>