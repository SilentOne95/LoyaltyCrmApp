<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFragmentBackground">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.login.LogInActivity">

        <ImageView
            android:id="@+id/sample_image_view"
            app:srcCompat="@drawable/ic_sample_lock"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/company_logo_desc"
            style="@style/log_in_company_image"/>

        <TextView
            android:id="@+id/log_in_text_view"
            android:text="@string/log_in_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sample_image_view"
            style="@style/log_in_text_header"/>

        <Button
            android:id="@+id/facebook_button"
            android:background="@drawable/rounded_corners_facebook"
            android:text="@string/log_in_facebook_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/log_in_text_view"
            style="@style/log_in_facebook_button"/>

        <TextView
            android:id="@+id/login_text_view"
            android:text="@string/login_text"
            app:layout_constraintStart_toStartOf="@+id/sign_login_edit_text"
            app:layout_constraintTop_toBottomOf="@+id/facebook_button"
            style="@style/basic_log_in_edit_text_description"/>

        <EditText
            android:id="@+id/sign_login_edit_text"
            android:background="@drawable/rounded_corners_edit_text"
            android:hint="@string/login_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_text_view"
            style="@style/login_field_edit_text" />

        <TextView
            android:id="@+id/password_text_view"
            android:text="@string/password_text"
            app:layout_constraintStart_toStartOf="@+id/sing_password_text_view"
            app:layout_constraintTop_toBottomOf="@+id/sign_login_edit_text"
            style="@style/basic_log_in_edit_text_description"/>

        <EditText
            android:id="@+id/sing_password_text_view"
            android:background="@drawable/rounded_corners_edit_text"
            android:hint="@string/password_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password_text_view"
            style="@style/password_field_edit_text"/>

        <Button
            android:id="@+id/log_in_button"
            android:background="@drawable/rounded_corners_sign_button"
            android:text="@string/log_in_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sing_password_text_view"
            style="@style/log_in_button"/>

        <TextView
            android:id="@+id/remind_password_text_click"
            android:text="@string/forgot_password_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/log_in_button"
            style="@style/log_in_remind_password_text_view"/>

        <TextView
            android:id="@+id/sign_up_text_view"
            android:text="@string/sign_up_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/remind_password_text_click"
            style="@style/sign_up_text_view"/>

    </android.support.constraint.ConstraintLayout>

</ScrollView>