<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:clipChildren="false"
    tools:context=".ui.homeFragment.HomeFragment">

    <ImageView
        android:id="@+id/special_offer_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/fragment_home_special_image_desc"
        style="@style/home_special_offer_image"/>

    <TextView
        android:id="@+id/info_text_view"
        android:text="@string/check_offers_text"
        style="@style/home_info_text_view"/>

    <com.example.konta.sketch_loyalityapp.utils.CustomGridView
        android:id="@+id/grid_view"
        style="@style/home_grid_view"/>

</LinearLayout>