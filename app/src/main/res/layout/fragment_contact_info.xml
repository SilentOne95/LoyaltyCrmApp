<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.map.bottomSheet.contactInfo.ContactInfoFragment">

    <TextView
        android:id="@+id/contact_us_text"
        style="@style/bottom_sheet_contact_us_text"
        android:text="@string/contact_us_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contact_info_phone_text"
        style="@style/contact_info_phone_text"
        android:text="@string/contact_info_phone_number_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_us_text" />

    <TextView
        android:id="@+id/contact_info_phone_view"
        style="@style/contact_info_phone_view"
        android:drawableStart="@drawable/ic_make_phone_call"
        app:layout_constraintBottom_toBottomOf="@+id/contact_info_phone_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/contact_info_phone_text"
        app:layout_constraintTop_toTopOf="@+id/contact_info_phone_text" />

    <TextView
        android:id="@+id/contact_info_email_text"
        style="@style/contact_info_email_text"
        android:text="@string/contact_info_email_text"
        app:layout_constraintStart_toStartOf="@+id/contact_info_phone_text"
        app:layout_constraintTop_toBottomOf="@+id/contact_info_phone_text" />

    <TextView
        android:id="@+id/contact_info_email_view"
        style="@style/contact_info_email_view"
        android:drawableStart="@drawable/ic_send_mail"
        app:layout_constraintBottom_toBottomOf="@+id/contact_info_email_text"
        app:layout_constraintEnd_toEndOf="@+id/contact_info_phone_view"
        app:layout_constraintStart_toStartOf="@+id/contact_info_phone_view"
        app:layout_constraintTop_toTopOf="@+id/contact_info_email_text" />

    <TextView
        android:id="@+id/contact_info_website_text"
        style="@style/contact_info_website_text"
        android:text="@string/contact_info_website_text"
        app:layout_constraintStart_toStartOf="@+id/contact_info_email_text"
        app:layout_constraintTop_toBottomOf="@+id/contact_info_email_text" />

    <TextView
        android:id="@+id/contact_info_website_view"
        style="@style/contact_info_website_view"
        android:drawableStart="@drawable/ic_website"
        app:layout_constraintBottom_toBottomOf="@+id/contact_info_website_text"
        app:layout_constraintEnd_toEndOf="@+id/contact_info_email_view"
        app:layout_constraintStart_toStartOf="@+id/contact_info_email_view"
        app:layout_constraintTop_toTopOf="@+id/contact_info_website_text" />

</android.support.constraint.ConstraintLayout>