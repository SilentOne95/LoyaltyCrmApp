<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsActivity"
    android:background="@color/colorFragmentBackground"
    android:padding="@dimen/layout_container_padding">

    <ScrollView
        android:id="@+id/settings_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grid_item_shadow">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/settings_label_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_notification"
                android:drawablePadding="8dp"
                android:padding="16dp"
                android:text="Push notifications:"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/big_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/settings_notification_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:layout_marginTop="8dp"
                android:text="News"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/mid_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings_label_notification" />

            <Switch
                android:id="@+id/settings_notification_switch_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:theme="@style/switch_button_barcode_scanner"
                app:layout_constraintBottom_toBottomOf="@+id/settings_notification_one"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/settings_notification_one" />

            <TextView
                android:id="@+id/settings_notification_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:layout_marginTop="16dp"
                android:text="Special offers"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/mid_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings_notification_one" />

            <Switch
                android:id="@+id/settings_notification_switch_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:theme="@style/switch_button_barcode_scanner"
                app:layout_constraintBottom_toBottomOf="@+id/settings_notification_two"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/settings_notification_two" />

            <TextView
                android:id="@+id/settings_notification_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discounts"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/mid_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings_notification_two" />

            <Switch
                android:id="@+id/settings_notification_switch_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:theme="@style/switch_button_barcode_scanner"
                app:layout_constraintBottom_toBottomOf="@+id/settings_notification_three"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/settings_notification_three" />

            <TextView
                android:id="@+id/settings_label_permission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_permission_key"
                android:drawablePadding="8dp"
                android:padding="16dp"
                android:text="Permissions:"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/big_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings_notification_three" />

            <TextView
                android:id="@+id/settings_permission_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:layout_marginTop="8dp"
                android:text="Access to device location"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/mid_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings_label_permission" />

            <Switch
                android:id="@+id/settings_permission_switch_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:theme="@style/switch_button_barcode_scanner"
                app:layout_constraintBottom_toBottomOf="@+id/settings_permission_one"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/settings_permission_one" />

            <TextView
                android:id="@+id/settings_label_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="8dp"
                android:padding="16dp"
                android:text="Terms and privacy policy:"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/big_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings_permission_one" />

            <TextView
                android:id="@+id/settings_terms_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:layout_marginTop="16dp"
                android:text="Terms &amp; conditions"
                android:textColor="@color/colorLink"
                android:textSize="@dimen/mid_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings_label_terms" />

            <TextView
                android:id="@+id/settings_terms_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:layout_marginTop="16dp"
                android:text="Privacy policy"
                android:textColor="@color/colorLink"
                android:textSize="@dimen/mid_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings_terms_one" />

            <TextView
                android:id="@+id/settings_terms_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:layout_marginTop="16dp"
                android:text="Licenses"
                android:textColor="@color/colorLink"
                android:textSize="@dimen/mid_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings_terms_two" />

            <TextView
                android:id="@+id/settings_label_delete_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_delete_account"
                android:drawablePadding="8dp"
                android:padding="16dp"
                android:text="Delete account:"
                android:textColor="@color/colorErrorInput"
                android:textSize="@dimen/big_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings_terms_three" />

            <TextView
                android:id="@+id/settings_delete_account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="8dp"
                android:layout_marginTop="8dp"
                android:text="To delete account, click button"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/mid_text_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings_label_delete_account" />

            <Button
                android:id="@+id/settings_delete_account_button"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_corners_orange"
                android:text="Delete"
                android:textSize="@dimen/small_text_size"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="@+id/settings_delete_account_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/settings_delete_account_text" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</FrameLayout>