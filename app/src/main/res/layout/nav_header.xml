<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorAccent"
    android:gravity="bottom"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/navigation_header_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/navigation_header_logo_desc"
        android:padding="@dimen/big_value"
        android:src="@drawable/sellger_logo_portrait_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/navigation_view_header_shade_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlackTransparent">

        <TextView
            android:id="@+id/navigation_header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_value"
            android:layout_marginTop="@dimen/mid_value"
            android:layout_marginEnd="@dimen/small_value"
            android:gravity="center"
            android:paddingStart="@dimen/small_value"
            android:paddingEnd="@dimen/small_value"
            android:text="@string/nav_view_upgrade_acc_text"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/mid_text_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/navigation_header_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/navigation_header_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/nav_header_button_height"
            android:layout_marginStart="@dimen/small_value"
            android:layout_marginEnd="@dimen/small_value"
            android:layout_marginBottom="@dimen/mid_value"
            android:background="@drawable/rounded_corners_button_white"
            android:minWidth="@dimen/nav_header_button_min_width"
            android:paddingStart="@dimen/very_small_value"
            android:paddingEnd="@dimen/very_small_value"
            android:text="@string/sign_up_text"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/navigation_header_text" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>